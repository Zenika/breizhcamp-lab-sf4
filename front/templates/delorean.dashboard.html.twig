{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/style.css') }}">
{% endblock %}

{% block body %}

    <div id="test">
        <table id="board">
            <col style="width:18%">
            <col style="width:18%">
            <col style="width:18%">
            <col style="width:15%">
            <col style="width:12%">
            <col style="width:2%">
            <col style="width:12%">

            <tr style="height:2%;">
                <td class="td1">
                    <div class="etiquette">MONTH</div>
                </td>
                <td class="td2">
                    <div class="etiquette">DAY</div>
                </td>
                <td class="td3">
                    <div class="etiquette year">YEARS</div>
                </td>
                <td class="ampm" rowspan="2">
                    <div style="display:block;">
                        <div>
                            <div class="etiquette">AM</div>
                        </div>
                        <div class="{{ destination_time.date|date("A") == 'AM' ? 'led-green' : 'led-grey' }}"></div>
                        <div>
                            <div class="etiquette">PM</div>
                        </div>
                        <div class="{{ destination_time.date|date("A") == 'PM' ? 'led-green' : 'led-grey' }}"></div>
                    </div
                </td>
                <td class="td4">
                    <div class="etiquette">HOURS</div>
                </td>
                <td class="deuxpoints"></td>
                <td>
                    <div class="etiquette">MIN</div>
                </td>
            </tr>
            <tr class="trText">
                <td class="redDate">
                    <div class="colorText">{{ (destination_time.date|date("F"))[:3] }}</div>
                </td>
                <td class="redDate">
                    <div class="colorText">{{ destination_time.date|date("d") }}</div>
                </td>
                <td class="redDate">
                    <div class="colorText">{{ destination_time.date|date("Y") }}</div>
                </td>
                <td class="redDate">
                    <div class="colorText">{{ destination_time.date|date("H") }}</div>
                </td>
                <td class="deuxpoints">
