                        <div class="led-green" style="margin:0 0 15% 0"></div>
                        <div class="led-green" style="margin:40% 0 0 0"></div>
                    </div>
                </td>
                <td class="redDate td5">
                    <div class="colorText">{{ destination_time.date|date("i") }}</div>
                </td>
            </tr>
            <tr>
                <td colspan="7" class="txtTime">
                    <div class="time">DESTINATION TIME</div>
                </td>
            </tr>
            <tr style="height:2%;">
